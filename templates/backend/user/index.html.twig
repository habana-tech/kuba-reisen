{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h3>All the users</h3>


    <section class="section other_activities" style="margin-top: 3em;">
        <div class="section__title ">
            {% for user in users %}
                <div class="activity">

                    <div class="activity__content">
                        <div class="activity__content__title">
                            <h4>{{ user.username }} <abbr title="{{ user.enabled ? 'Enabled' : 'Disabled' }}">{{ user.enabled ? '⚡' : '🏳' }}</h4>
                            <h5>{{ user.email }}</h5>

                            <p><small>{{ user.roles ? user.roles|join(', ') : '' }}</small></p>
                            <small>Last Login at {{ user.lastLogin ? user.lastLogin|date('Y-m-d H:i:s') : 'never'}}</small>
                        </div>
                        <div class="activity__content__description">
                            <a href="{{ path('user_edit', {'id': user.id}) }}" class="button button-primary button-shadow button-block">edit</a>
                        </div>
                    </div>
                </div>
            {% endfor %}

        </div>
    </section>

    <hr>
    <a href="{{ path('user_new') }}" class="button button-primary button-shadow button-block">Create new</a>
{% endblock %}
