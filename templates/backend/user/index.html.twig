{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>


    <section class="section other_activities">
        <div class="section__title ">
            {% for user in users %}
                <div class="activity">

                    <div class="activity__content">
                        <div class="activity__content__title">
                            <h4>{{ user.username }}</h4>
                            <h5>{{ user.email }}</h5>
                            <h6>{{ user.enabled ? 'Enabled' : 'Disabled' }}</h6>
                            <p>{{ user.roles ? user.roles|join(', ') : '' }}</p>
                        </div>
                        <div class="activity__content__description">
                            <a href="{{ path('user_show', {'id': user.id}) }}"  class="btn">show</a>
                            <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn">edit</a>
                        </div>
                    </div>
                </div>
            {% endfor %}

        </div>
    </section>

    <hr>
    <a href="{{ path('user_new') }}" class="btn">Create new</a>
{% endblock %}
