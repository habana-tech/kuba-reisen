{% extends 'base.html.twig' %}

{% block title %}ActivityStory index{% endblock %}

{% block body %}

<div class="activities_index">
        <div class="activities_title">
            <h3>All the stories â›³</h3>
        </div>
        <div class="new_btn">
            <a href="{{ path('backend_activity_story_new') }}" class="button button-primary button-shadow button-block">Create new</a>
        </div>
    
    
    <div class="activities__list__container">
                {% for activity in activity_stories %}
                
    
                 <div class="activity_wrap" style="padding: .5em">
                   <h4>
                       {{activity.title}}
                    </h4>
                    <h4>
                    <small>
                            <a href="{{ path('backend_activity_story_edit', {'id': activity.id}) }}" >Edit</a>
                        
                            <a target="_blank" href="{{ path('activities') }}?preview=true" >Preview</a>
                            
                    </small>
                     
                   </h4>
                    
                </div>
                {% else %}
                    <p>nothing to show</p>
                {% endfor %}
                
    </div>
    
    </div>
        
{% endblock %}
