{% extends 'base.html.twig' %}

{% block title %}Interest index{% endblock %}

{% block body %}
    <h1>Interest index</h1>

    <hr>

    <section class="section other_activities">
        <div class="section__title ">
            {% for interest in interests %}
                <div class="activity">

                    <div class="activity__content">
                        <div class="activity__content__title">
                            <h4>{{ interest.title }}</h4>
                        </div>
                        <div class="activity__content__description">
                            <a href="{{ path('backend_interest_show', {'id': interest.id}) }}">show</a>
                            <a href="{{ path('backend_interest_edit', {'id': interest.id}) }}">edit</a>
                        </div>
                    </div>
                </div>
            {% endfor %}

        </div>
    </section>

    <hr>

    <a href="{{ path('backend_interest_new') }}" class="btn">Create new</a>
{% endblock %}
