{% extends 'base.html.twig' %}

{% block title %}Activity{% endblock %}

{% block body %}
    <h1>Activity</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ activity.name }}</td>
            </tr>
            <tr>
                <th>Language</th>
                <td>{{ activity.language }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ activity.updatedAt ? activity.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>AlternativeText</th>
                <td>{{ activity.alternativeText }}</td>
            </tr>
            <tr>
                <th>Image.name</th>
                <td>{{ activity.image.name }}</td>
            </tr>
            <tr>
                <th>Image.originalName</th>
                <td>{{ activity.image.originalName }}</td>
            </tr>
            <tr>
                <th>Image.mimeType</th>
                <td>{{ activity.image.mimeType }}</td>
            </tr>
            <tr>
                <th>Image.size</th>
                <td>{{ activity.image.size }}</td>
            </tr>
            <tr>
                <th>Image.dimensions</th>
                <td>{{ activity.image.dimensions | join('x')  }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('backend_activity_index') }}">back to list</a>

    <a href="{{ path('backend_activity_edit', {'id': activity.id}) }}">edit</a>

    {{ include('backend/activity/_delete_form.html.twig') }}
{% endblock %}
