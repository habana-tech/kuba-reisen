{% extends 'base.html.twig' %}

{% block title %}Edit Activity{% endblock %}

{% block body %}
    <h1>Editing Activity <i><u>{{ activity.name }}</u></i></h1>

    {{ form_start(form) }}

    <div class="row">
        <div class="grid grid-half">
            <div class="row">
                {{ form_row(form.name) }}
            </div>
            <div class="row">
                <div class="grid grid-half">
                    {{ form_row(form.destinations) }}
                </div><div class="grid grid-half">
                    {{ form_row(form.filterTags) }}
                </div>
            </div>
        </div>
        <div class="grid grid-half">

            {{ form_row(form.description) }}
        </div>

    </div>

    {{ include('backend/activity/_form.html.twig', {'button_label': 'Update'}) }}

    <a href="{{ path('backend_activity_index') }}" class="btn">back to list</a>

    {{ include('backend/activity/_delete_form.html.twig') }}
{% endblock %}
