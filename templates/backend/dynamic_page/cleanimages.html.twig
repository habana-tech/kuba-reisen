{% extends 'base.html.twig' %}

{% block title %}Edit DynamicPage{% endblock %}

{% block body %}
    <h3>Clean images</h3>

    <p>
        {{ deleted | length }} unused images {% if action == 'preview' %} to be {% endif %} deleted
    </p>
    <p><a href="{{ path('backend_clean_images', {'action':'delete'}) }}">Click here to do it!</a></p>
    <p>
        {{ imgList | length }} images in use for the website
    </p>

    <div class="row">
        {% if deleted %}
            <div class="grid-half">
                <h4>Images {% if action == 'preview' %} to be {% endif %} deleted</h4>
                <ul>
                    {% for image in deleted %}
                        <li>{{ image }}</li>
                    {% endfor %}
                </ul>
            </div>

        {% endif %}

        {% if imgList %}
            <div class="grid-half">
                <h4>Images used</h4>
                <ul>
                    {% for image in imgList %}
                        <li>{{ image }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
    </div>



{% endblock %}
