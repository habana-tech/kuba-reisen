{% extends 'base.html.twig' %}

{% block title %}FilterTag index{% endblock %}

{% block body %}
    <h1>FilterTag index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Language</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for filter_tag in filter_tags %}
            <tr>
                <td>{{ filter_tag.id }}</td>
                <td>{{ filter_tag.title }}</td>
                <td>{{ filter_tag.language }}</td>
                <td>
                    <a href="{{ path('backend_filter_tag_show', {'id': filter_tag.id}) }}">show</a>
                    <a href="{{ path('backend_filter_tag_edit', {'id': filter_tag.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('backend_filter_tag_new') }}">Create new</a>
{% endblock %}
