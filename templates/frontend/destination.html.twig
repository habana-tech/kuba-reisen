{% extends 'frontend/base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/destinations.css') }}" type="text/css">
{% endblock %}

{% block body %}

    {{ include('frontend/components/global/_header.html.twig') }}

    <main class="main">


        {% set hero_title = destination.title %}
        {% include 'frontend/components/global/_hero.html.twig' with  {'hero_title': hero_title} only %}

        {% if is_granted('ROLE_EDITOR') %}
        <div id="grapes-editable">
        {% endif %}
        {{ include('frontend/components/destinations/_introduction.html.twig') }}

        {{ include('frontend/components/destinations/_features_list.html.twig') }}

        {{ include('frontend/components/destinations/_activities.html.twig') }}

        {{ include('frontend/components/global/_top_destination.html.twig') }}

        {% if is_granted('ROLE_EDITOR') %}
        </div>
        {% endif %}
    </main>

    {{ include('frontend/components/global/_footer.html.twig') }}

{% endblock %}

{% block javascripts_vendors %}
    <script src="{{ asset('scripts/vendors/three.min.js') }}"></script>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('scripts/destination.js') }}"></script>
{% endblock %}