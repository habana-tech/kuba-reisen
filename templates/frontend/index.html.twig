{% endblock %}


{% block inline_stylesheets %}
    {% if not is_granted('ROLE_EDITOR') or app.request.get('preview') %}
        <style>
            body.loading{
                overflow: hidden;
                height: 100vh;
            }

            @keyframes pageLoading {
                0%{
                    opacity: 1;
                }
                50%{
                    opacity: .5;
                }
                100%{
                    opacity: 0;
                }
            }

            @keyframes zoomAnimation {
                0%{
                    transform: scale(.85) rotate(0);
                }
                50%{
                    transform: scale(1) rotate(180deg);
                }
                100%{
                    transform: scale(.85) rotate(360deg);
                }
            }

            .overlay-loading{
                width: 100%;
                height: 100%;
                position: absolute;
                background: linear-gradient(45deg, #35cfd4, #14a1e6, #62ab03, #004d00);
                z-index: 10;
                transition: all;
            }

            body.loading .overlay-loading .overlay-loading__circle{
                position: absolute;

                height: 3em;
                width: 3em;
                border-radius: 50%;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                border: white 1px solid;
                animation: zoomAnimation 2s ease-in-out 500;
                background: linear-gradient(45deg, #35cfd4, #62ab03);
            }

            body.loading .overlay-loading{
                opacity: 1;
            }

            body.render .overlay-loading{
                opacity: 0;
                animation: pageLoading .5s ease-in-out 1;
            }

        </style>
    {% endif %}
{% endblock %}

