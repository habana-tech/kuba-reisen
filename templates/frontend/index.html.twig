        {#{{ include('frontend/components/index/_clients_opinions.html.twig') }}#}

        {#{{ include('frontend/components/index/_team_opinions.html.twig') }}#}

        {{ render(controller('App\\Controller\\RegionsController::regionTravelOptions', {'preview':app.request.get('preview')} )) }}

