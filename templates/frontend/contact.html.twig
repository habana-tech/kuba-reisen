                    </div>
                    <ul class="visually-hidden" id="{{ form.selfLuxury.vars.id }}_labels">
                        <li>Text A</li>
                        <li>Text B</li>
                        <li>Text C</li>
                        <li>Text D</li>
                        <li>Text E</li>
                    </ul>
                </div>


				<div class="row row-center float-center padding-top">
					{{ form_label(form.message) }}
				</div>
				<div class="row row-center float-center padding-top">
					<div class="grid-half select-control">
					{{ form_widget(form.message) }}
					</div>
				</div>

				<div class="row  row-center row-middle header_headline no-lat-margins">

				<button class="btn header_headline_btn">{{ button_label|default('Send form') }}</button>
				</div>

				{{ form_widget(form.interests) }}
				{{ dump(form) }}
				{{ form_end(form) }}

			</section>

