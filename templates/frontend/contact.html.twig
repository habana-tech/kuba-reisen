						</div>
				</div>

				<div class="row row-center float-center padding-top">
					<div class="grid-fifth">
						{{ form_label(form.travelDuration) }}
					</div>
					<div class="grid-fourth select-control">
						{{ form_widget(form.travelDuration) }}
					</div>
				</div>

				<div class="row row-center float-center padding-top">
					<div class="grid-fifth">
						{{ form_label(form.peopleAmount) }}
					</div>
					<div class="grid-fourth select-control">
						{{ form_widget(form.peopleAmount) }}
					</div>
				</div>

				<div class="row row-center float-center padding-top">
