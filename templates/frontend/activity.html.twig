{% extends 'frontend/base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/activity.css') }}" type="text/css">
{% endblock %}

{% block body %}

    {{ include('frontend/components/global/_header.html.twig') }}

    <main class="main">

        {% set hero_title = activity.name %}
        {% include 'frontend/components/global/_hero.html.twig' with  {'hero_title': hero_title} only %}

        {{ include('frontend/components/activity/_description.html.twig') }}

    </main>

    {{ include('frontend/components/global/_footer.html.twig') }}

{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('scripts/activity.js') }}"></script>
{% endblock %}