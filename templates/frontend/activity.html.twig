{% extends 'frontend/base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/activity.css') }}" type="text/css">
{% endblock %}

{% block body %}

    {{ include('frontend/components/global/_header.html.twig') }}

    <main class="main">


        {% include 'frontend/components/global/_hero.html.twig'
            with  {'hero_title': activity.name} only %}


        {% if is_granted('ROLE_EDITOR') %}
            <div id="grapes-editable">
        {% endif %}

            {% include 'frontend/components/activity/_description.html.twig' with {'description':activity.description } %}

            {% include 'frontend/components/activity/_images.html.twig' %}

            {% include 'frontend/components/activity/_related_activities.html.twig' %}

            {#{% include 'frontend/components/activity/_float_button.html.twig' %}#}

        {% if is_granted('ROLE_EDITOR') %}
            </div>
        {% endif %}

        {% include 'frontend/components/global/_bottom_bar.html.twig' %}

    </main>

    {{ include('frontend/components/global/_footer.html.twig') }}

{% endblock %}

{% block javascripts_vendors %}
    <script src="{{ asset('scripts/vendors/three.min.js') }}"></script>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% if not is_granted('ROLE_EDITOR') %}
        <script src="{{ asset('scripts/activity.js') }}"></script>
    {% endif %}
{% endblock %}