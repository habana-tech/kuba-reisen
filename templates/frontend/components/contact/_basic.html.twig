<section class="section contact">

    <div class="section__title ">
        <div class="section__title__highlight section__title__highlight--orange">
            <h2 data-grape_id="contact_t1" data-grape_format="txt">
            {{ page.ElementContent('contact_t1',"Beginnen wir mit den Grundlagen") | raw }}</h2>
        </div>
        <div class="section__title__description" data-grape_id="contact_p1">
