<section class="section contact">

    <div class="section__title ">
        <div class="section__title__highlight section__title__highlight--orange">
            <h2>{% trans %}contact.advance.title{% endtrans %}</h2>
{#            <h2>Mehr Info bedeutet bessere Beratung</h2>#}
        </div>
        <div class="section__title__description">
            <p>
                {% trans %}contact.advance.text{% endtrans %}
{#                Klicken Sie doch schon mal Ihre Interessen an, damit k√∂nnen Sie noch gezielter beraten werden.#}
            </p>
        </div>
    </div>

    {% if activities | length > 0 %}
        <div class="selected-activities">
            <div class="selected-activities__title">
                <h3>{% trans %}contact.advance.activities.title{% endtrans %}</h3>
{#                <h3>Activities selected for you</h3>#}
            </div>
            <div class="selected-activities__list">
                {% for activity in activities %}
                    {% include 'frontend/components/global/_activity.html.twig' with {'activity':activity, 'contact': true } %}
                {% endfor %}
            </div>
        </div>
    {% endif %}

    <div class="travel-interest">
        <div class="travel-interest__title">
            <h3>{% trans %}contact.advance.activities.selecting{% endtrans %}</h3>
{#            <h3>Choose what interests you</h3>#}
        </div>

        <div class="travel-interest__options">
            {% for interest in interests %}
                {% include('frontend/components/contact/_interest.html.twig')
                    with {'index': loop.index, 'interest': interest} %}
            {% endfor %}
        </div>
    </div>

    {{ include('frontend/components/contact/_advance_flyquestions.html.twig') }}

    <div class="form__item">

        <div class="form__item__label">
            {{ form_label(form.selfConsider) }}
        </div>

        <div class="form__item__input select-control">
            {{ form_widget(form.selfConsider, {}) }}
            <div id="{{ form.selfConsider.vars.id }}_container"></div>
            <div class="slider-labels">
                <div class="selfCharacter slider-labels_label first">
                    -
                </div>
                <div class="selfCharacter slider-labels_label value" id="{{ form.selfConsider.vars.id }}_value">
                    {{ form.selfConsider.vars.id }}
                </div>
                <div class="selfCharacter slider-labels_label last">
                    +
                </div>
            </div>

        </div>

        <div class="visually-hidden admin_visible_list" id="{{ form.selfConsider.vars.id }}_labels">
            <ul class="visually-hidden admin_visible_list">
                <li>{% trans %}contact.advance.selfConsider.opt1{% endtrans %}</li>
                <li>{% trans %}contact.advance.selfConsider.opt2{% endtrans %}</li>
                <li>{% trans %}contact.advance.selfConsider.opt3{% endtrans %}</li>
                <li>{% trans %}contact.advance.selfConsider.opt4_action{% endtrans %}</li>
                <li>{% trans %}contact.advance.selfConsider.opt5{% endtrans %}</li>
                <li>{% trans %}contact.advance.selfConsider.opt6_indianajones{% endtrans %}</li>
            </ul>
        </div>

    </div>

    <div class="form__item">

        <div class="form__item__label">
            {{ form_label(form.selfCharacter) }}
        </div>

        <div class="form__item__input select-control">
            {{ form_widget(form.selfCharacter, {}) }}
            {{ form_errors(form.selfCharacter) }}
            <div id="{{ form.selfCharacter.vars.id }}_container"></div>
            <div class="slider-labels">
                <div class="selfCharacter slider-labels_label first">
                    -
                </div>
                <div class="selfCharacter slider-labels_label value" id="{{ form.selfCharacter.vars.id }}_value">
                    {{ form.selfCharacter.vars.id }}
                </div>
                <div class="selfCharacter slider-labels_label last">
                    +
                </div>
            </div>

        </div>

        <div class="visually-hidden admin_visible_list" id="{{ form.selfCharacter.vars.id }}_labels">
            <ul class="visually-hidden admin_visible_list">
                <li>{% trans %}contact.advance.selfCharacter.noInfo{% endtrans %}</li>
                <li>{% trans %}contact.advance.selfCharacter.cityPerson{% endtrans %}</li>
                <li>{% trans %}contact.advance.selfCharacter.something{% endtrans %}</li>
                <li>{% trans %}contact.advance.selfCharacter.likeNature{% endtrans %}</li>
                <li>{% trans %}contact.advance.selfCharacter.preferGreen{% endtrans %}</li>
                <li>{% trans %}contact.advance.selfCharacter.wheneverPossible{% endtrans %}</li>
            </ul>
        </div>
    </div>

    <div class="form__item">

        <div class="form__item__label">
            {{ form_label(form.selfLuxury) }}
        </div>

        <div class="form__item__input select-control">
            {{ form_widget(form.selfLuxury, {}) }}
            <div id="{{ form.selfLuxury.vars.id }}_container"></div>
            <div class="slider-labels">
                <div class="selfCharacter slider-labels_label first">
                    -
                </div>
                <div class="selfCharacter slider-labels_label value" id="{{ form.selfLuxury.vars.id }}_value">{{ form.selfLuxury.vars.id }}</div>
                <div class="selfCharacter slider-labels_label last">
                    +
                </div>
            </div>

        </div>

        <div class="visually-hidden admin_visible_list" id="{{ form.selfLuxury.vars.id }}_labels">
            <ul class="visually-hidden admin_visible_list">
                <li>{% trans %}contact.advance.selfLuxury.noInfo{% endtrans %}</li>
                <li>{% trans %}contact.advance.selfLuxury.dontTellme{% endtrans %}</li>
                <li>{% trans %}contact.advance.selfLuxury.mainThingIsCleanliness{% endtrans %}</li>
                <li>{% trans %}contact.advance.selfLuxury.NiceAndComfortable{% endtrans %}</li>
                <li>{% trans %}contact.advance.selfLuxury.MustBeComfort{% endtrans %}</li>
                <li>{% trans %}contact.advance.selfLuxury.dontTravelWithoutLuxury{% endtrans %}</li>
            </ul>
        </div>

    </div>

</section>
