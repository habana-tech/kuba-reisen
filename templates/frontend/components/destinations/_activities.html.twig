{% if destination.activities | length > 0 %}

<section class="section activities">

    <div class="section__title">
        <div class="section__title__highlight">
            <h2 data-grape_id="activities_title">
                {{ page.ElementContent('activities_title',"What you can do in "~ destination.name ~" with us!") | raw }}
            </h2>
        </div>
        <div class="section__title__description"  data-grape_id="activities_description">
            {{ page.ElementContent('activities_description',"Lorem ipsum dolor sit amet, consectetur adipisicing elit.") | raw }}

        </div>
    </div>

    <div class="activities__container">

        <div class="slideshow">
            {% for activity in destination.activities | slice(0, 10) %}

                {% if is_granted('ROLE_EDITOR') and not app.request.get('preview') %}
                    <img src="{{ asset(activity.imagePath) }}" alt="">
                {% else %}
                    <div class="slide">
                        <div class="slide__wrap">
                            <div class="slide__img"
                                 style="background-image: url({{ asset(activity.dynamicPage.elementAttr('activity_images_img1', 'src', asset('img/header_pic.jpg'))) }} );">
                            </div>
                            <div class="slide__title-wrap">
                                <h3 class="slide__title">{{ activity.name }}</h3>
                                <h4 class="slide__subtitle">{{ activity.description | striptags | truncate(30, true) }}</h4>
                            </div>
                        </div>
                    </div>
                {%  endif %}
                
                
            {% endfor %}
            
            

        </div><!-- /slideshow -->

        <nav class="boxnav">
            <button class="boxnav__item boxnav__item--prev">
                <svg class="icon icon--caret">
                    <use xlink:href="#icon-caret"></use>
                </svg>
            </button>
            <div class="boxnav__item boxnav__item--label">
                <span class="boxnav__label boxnav__label--current">1</span>
                <span class="boxnav__label boxnav__label--total"></span>
            </div>
            <button class="boxnav__item boxnav__item--next">
                <svg class="icon icon--caret-rot">
                    <use xlink:href="#icon-caret"></use>
                </svg>
            </button>
        </nav>

        <div class="controls">
            <a href="#" class="action action--details">See details</a>
            <a href="#" class="action action--details">Save</a>
        </div>


        <!-- details -->
        <div class="details-wrap">

            {% for activity in destination.activities | slice(0, 10) %}
                <div class="details">
                <div class="details__item details__item-price">
                    <div class="details__inner details__inner--price">
                        {{ activity.description | raw }}
                    </div>
                </div>
            </div><!-- /details -->
            {% endfor %}
        </div>
    </div>


</section>

{% endif %}