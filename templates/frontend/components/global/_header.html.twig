<header class="header">
    <div class="header__logo">
        <a href="{{ path('frontend') }}">
            <img src="{{ asset('img/logo.svg') }}">
        </a>
    </div>

        <div class="header__menu-icon">

            <div id="menu-icon-wrapper" class="menu-icon-wrapper float-right">
