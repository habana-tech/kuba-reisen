<footer class="footer">

    <div class="footer__banner">

        <div class="footer__banner__image">

            {% if is_granted('ROLE_EDITOR') and app.request.get('preview') is null %}
                <img data-grape_section="_footer" data-grape_id="footer_img1" src="{{ page.ElementAttr('footer_img1', 'src', asset('img/banner/footer.png')) | raw }}" alt="">
            {% else %}
                {{ imgTagContent(page.ElementAttr('footer_img1', 'src', asset('img/banner/footer.png')),
                    page.ElementAttr('footer_img1', 'srcb64', asset('img/banner/footer.png')),
                    '',
                    '100vw',
                    'data-grape_section="_footer" data-grape_id="footer_img1"') | raw }}
            {% endif %}
        </div>

        <div class="footer__banner__content">
            <div class="footer__banner__content__titles">
                <h2 data-grape_section="_footer" data-grape_id="footer_txt1">
                    {{ page.ElementContent('footer_txt1',"Take a step toward your travel to Cuba") | raw }}
                </h2>
            </div>

            <a class="btn" href="{{ path('contact') }}" data-grape_section="_footer" data-grape_id="footer_btn1">
                {{ page.ElementContent('footer_btn1',"Talk to an Expert!") | raw }}
            </a>
        </div>

    </div>

    <div class="footer__content">

        <div class="footer__content__links">

            <div class="footer__content__links__column">
                <div class="footer__content__links__column__title">
                    <a href="#">
                        <h3>Kuba erkunden</h3>
                    </a>
                </div>
                <ul>
                    {% for destination in destinations %}
                        <li class="header__nav__menu__column__list__link">
                            <a href="{{ path('destination',
                                {'id':destination.getId,
                                    'name':destination.getMachineName })
                            }}">
                                {{ destination.getName }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>

            <div class="footer__content__links__column">
                <div class="footer__content__links__column__title">
                    <a href="">
                        <h3>Kuba Ausflüge</h3>
                    </a>
                </div>
                <ul class="">
                    <li>
                        <a href="">Our Bucket List</a>
                    </li>
                    <li>
                        <a href="">Excursion Havanna</a>
                    </li>
                    <li>
                        <a href="">Excursion en campo
                            <span>New!</span></a>
                    </li>

                </ul>
            </div>

            <div class="footer__content__links__column">
                <div class="footer__content__links__column__title">
                    <a href="">
                        <h3>Kuba bereisen</h3>
                    </a>
                </div>
                <ul class="">

                    <li class="header__nav__menu__column__list__link">
                        <a href="{{ path('contact') }}">Individualreise</a>
                    </li>

                    {% for filter in filterTags %}
                        <li class="header__nav__menu__column__list__link">
                            <a href="{{ path('activitiesFilter', {'filters':filter.title }) }}#activities">
                                {{ filter.title }}
                            </a>
                        </li>
                    {% endfor %}

                </ul>
            </div>

            <div class="footer__content__links__column">
{#                <div class="footer__content__links__column__title">#}
{#                    <a href="">#}
{#                        <h3>Reiseinfos</h3>#}
{#                    </a>#}
{#                </div>#}
                <ul class="">
                    <li>
                        <a href="{{ path('travel_info') }}">Landesinformationen</a>
                    </li>
                    <li>
                        <a href="{{ path('about_us') }}">Gut zu wissen</a>
                    </li>
                    <li>
                        <a href="{{ path('faq') }}">Reise FAQ für kuba</a>
                    </li>
                </ul>
            </div>

        </div>

        {{ include('/frontend/components/_divider--white.html.twig') }}

