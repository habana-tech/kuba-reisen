<footer class="footer">

    {{ render(controller('App\\Controller\\RegionsController::regionBanner')) }}

    <div class="footer__content">

        <div class="footer__content__links">

            <div class="footer__content__links__column">
                <div class="footer__content__links__column__title">
                    <a href="{{ path('pageLoad', {'name' : pager.url('exploring') }) }}">
                        <h3>{{ pager.name('exploring') }}</h3>
                    </a>
                </div>
                <ul>
                    {% for destination in destinations %}
                        <li>
                            <a href="{{ path('destination',
                                {'id':destination.getId,
                                    'name':destination.getMachineName })
                            }}">
                                {{ destination.getName }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>

            <div class="footer__content__links__column">
                <div class="footer__content__links__column__title">
                    <a href="{{ path('pageLoad', {'name' : pager.name('tours')  }) }}">
                        <h3>{{ pager.name('tours') }}</h3>
                    </a>
                </div>
                <ul>
                    <li>
                        <a href="{{ path('contact', {'travel':'raise'}) }}">
                            {{ 'global.travels.individual'|trans }}
                        </a>
                    </li>

                    {% for filter in filterTagsPinned %}
                        <li>
                            <a href="{{ path('activitiesFilter', {'filters':filter.title }) }}#activities_filters">
                                {{ filter.title }}
                            </a>
                        </li>
                    {% endfor %}

                </ul>
            </div>

            <div class="footer__content__links__column">
                <div class="footer__content__links__column__title">
                    <a href="{{ path('pageLoad', {'name' : pager.url('excursions') }) }}">
                        <h3>{{  pager.name('excursions')  }}</h3>
                    </a>
                </div>
                <ul>
                    <li>
                        <a href="{{ path('activities') }}">
                            {{ pager.name('activities') }}
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('pageLoad', {'name' : pager.url('bucket_list') }) }}">
                            {{ pager.name('bucket_list') }}
