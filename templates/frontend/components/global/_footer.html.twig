                    </li>

                </ul>
            </div>

            <div class="footer__content__links__column">
                <div class="footer__content__links__column__title">
                    <h3>&nbsp;</h3>
                </div>

                <ul>
                    <li>
                        <a href="{{ path('pageLoad', {'name' : pager.url('faq') }) }}">
                            {{ pager.name('faq') }}
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('pageLoad', {'name' : pager.url('good_to_know') }) }}">
                            {{ pager.name('good_to_know') }}
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('pageLoad', {'name' : pager.url('travel_info') }) }}">
                            {{ pager.name('travel_info') }}
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('pageLoad', {'name' : pager.url('about_us') }) }}">
                            {{ pager.name('about_us') }}
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('contact') }}">
                            {{ pager.name('contact')  }}
                        </a>
                    </li>
                </ul>
            </div>

        </div>

        {{ include('/frontend/components/global/_divider.html.twig') }}

        <div class="footer__content__agb">
            <p>
                <a href="{{ path('pageLoad', {'name' : pager.url('travel_conditions') }) }}">
                   <abbr title="{% trans %}global.agb.title{% endtrans %}">{% trans %}global.agb.abbr{% endtrans %}</abbr>
                </a>
                 |
                <a href="{{ path('pageLoad', {'name' : pager.url('imprint') }) }}">
                    {{ pager.name('imprint') }}
                </a>
                 |

                 <a href="{{ path('pageLoad', {'name' : pager.url('protection_data_declaration') }) }}">
