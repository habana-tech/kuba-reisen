<section class="section banner_sky">

    <div class="banner_sky__image">
        {% if is_granted('ROLE_EDITOR') and app.request.get('preview') is null %}
            <img data-grape_id="banner_sky__image"
            src="{{ page.ElementAttr('banner_sky__image', 'src', asset('img/banner/sky.png') ) }}"
            alt="{{ page.getElementContent('__banner_sky_headline__') }}">
        {% else %}
            {{  imgTagContent(
                page.ElementAttr('banner_sky__image', 'src', asset('img/banner/sky.png')),
                page.ElementAttr('banner_sky__image', 'srcb64', asset('img/banner/sky.png')),
                page.getElementContent('__banner_sky_headline__'),
                '100vw',
                'data-grape_id="banner_sky__image"') | raw }}
        {% endif %}

    </div>

    <div class="banner_sky__content">
        <div class="banner_sky__content__titles">
            <h2 data-grape_id="__banner_sky_headline__" data-grape_format="txt">
                {{ page.getElementContent('__banner_sky_headline__', 'Take a step toward travel to Cuba') }}
            </h2>

            <h3 data-grape_id="__banner_sky_subtitle__" data-grape_format="txt">
                {{ page.getElementContent('__banner_sky_subtitle__', 'Take a step toward travel to Cuba') }}
            </h3>
        </div>

        <a class="btn" href="{{  path('contact') }}"
           data-grape_id="__banner_sky_contact_btn__"
           data-grape_format="txt">
           {{ page.getElementContent('__banner_sky_contact_btn__', 'Talk to an expert') }}
        </a>
    </div>

</section>