<div class="cart_bar cart_bar--initial">

    <div class="cart_bar__title">
        <div class="cart_bar__title__icon">
            {{ include('frontend/components/_icons/_heart.html.twig') }}
        </div>
        <h4>{{ 'global.activityBag.title'|trans }}</h4>
        <span>0</span>
    </div>

    <div class="cart_bar__content">

        <div class="cart_bar__content__activities">


            <div class="cart_bar__content__activities__item__prototype">
                {{ include('frontend/components/global/_cart_bar_activity_prototype.html.twig') }}
            </div>


        </div>

        <div class="cart_bar__content__text">
            <p data-show="empty">{{ 'global.activityBag.emptyMessage'|trans }}</p>
        </div>
        <div class="cart_bar__content__button">
            <a data-show="no-empty" href="{{ path('contact') }}">{{ 'global.activityBag.goToContacttravel'|trans }}</a>

            <a data-show="empty" href="{{ path('activities') }}">{{ 'global.activityBag.seeActivities'|trans }}</a>

            <a data-show="no-empty" href="{{ path('contact') }}">{{ 'contact.pagename'|trans }}</a>
        </div>
    </div>

</div>
