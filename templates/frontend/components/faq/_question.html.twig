            {% for descriptionFragment in questionSection.descriptionFragments %}

                <div class="question">
                    <div class="question__title">
                        <h3>{{ descriptionFragment.name }}</h3>
                    </div>

                    <div class="question__answer">
                        {{ descriptionFragment.content | raw }}
                    </div>
                </div>

            {% endfor %}

        </div>
    {% endfor %}

</section>