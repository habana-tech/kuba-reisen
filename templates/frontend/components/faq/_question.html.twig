<section class="section content_index">

    <ul class="content_index__list">
        {% for questionSection in questionSections %}
        <li>
            <a href="#section_question__{{ loop.index }}">
                {{ questionSection.title }}
            </a>
        </li>
        {% endfor %}
    </ul>

</section>

<section class="section questions">

    {% for questionSection in questionSections %}
        <div id="section_question__{{ loop.index }}" class="questions__topic">

            <div class="questions__topic__title">
                <h2>{{ questionSection.title }}</h2>
            </div>

