<section class="section">
    <div class="gallery">
        {% for image in activity.gallery %}
            <div class="gallery__item">
                <div class="gallery__item__image">
                    {{ imgTagContent(
                        page.ElementAttr('activity_images_img'~i, 'src', asset('img/header_pic.jpg')),
                        page.ElementAttr('activity_images_img'~i, 'srcb64', asset('img/header_pic.jpg')),
                        '',
                        '100vw',
                        'data-grape_id="activity_images_img'~i~'"') | raw }}
                </div>
                <div class="gallery__item__title">
                        <h2 data-grape_id="activity_images_img{{i}}_desc" data-grape_format="txt">
                            {{ page.ElementContent('activity_images_img'~i~'_desc') | striptags }}
                        </h2>
                    </div>
            </div>
        {% endfor %}
    </div>
</section>