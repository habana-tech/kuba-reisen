<section class="section">
    <div class="gallery">
        {% for image in activity.gallery %}
            <div class="gallery__item">
                <div class="gallery__item__image">
                    {{ imgTagContent(
                        image.staticImagePath,
                        image.base64,
                        image.description,
                        '100vw',
                        '') | raw }}
                </div>
                <div class="gallery__item__title">
                        <h2>
                            {{ image.description }}
                        </h2>
                    </div>
            </div>
        {% endfor %}
    </div>
</section>