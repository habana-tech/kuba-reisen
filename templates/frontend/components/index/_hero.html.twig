<section class="section hero hero-home">

    {% if is_granted('ROLE_EDITOR') and app.request.get('preview') is null %}
        <div class="slide-wrapper slide-wrapper-editor">
            {% for i in 1..4 %}
                <div class="slide-item">
                    <img data-grape_id="home_hero_img{{ i }}"
                         src="{{ page.ElementAttr('home_hero_img'~i, 'src', asset('img/hero/'~i~'.jpg') ) }}"
                         class="slide-item__image">
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="slide-wrapper">
            {% for i in 1..4 %}
                <div class="slide-item">
                    {{ imgTagContent(
                        page.ElementAttr('home_hero_img'~i, 'src', asset('img/hero/'~i~'.jpg')),
                        page.ElementAttr('home_hero_img'~i, 'srcb64', asset('img/hero/'~i~'.jpg')),
                        '',
                        '100vw',
                        'data-grape_id="home_hero_img'~i~'"') | raw }}
                </div>
            {% endfor %}
        </div>
    {% endif %}

    <div class="hero__content">
        <h1 class="hero__content__text" data-grape_id="hero__content__text">
            {% if page.getElement('hero__content__text') is null %}
                Kuba bewusst erleben.
                <br>
                Für mutige Entdecker und gesellige Abenteurer.
            {% else %}
                {{ page.getElement('hero__content__text') | raw}}
            {% endif %}

        </h1>

        <a href="{{ path("contact") }}"
           class="btn btn--big btn--transparent">Reise planen</a>
    </div>

    <div class="hero__buttom-links">
        <div class="hero__buttom-links__item">
            <a href="#" data-slide="1">Kuba erkunden </a>
            <ul class="hero__buttom-links__item__nav">
                {% for destination in destinations | slice(0, 4) %}
                    <li>
                        <a href="{{ path('destination',
                            {'id':destination.getId,
                                '_locale': 'de',
                                'name':destination.getMachineName })
                        }}">
                            {{ destination.getName }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
        <div class="hero__buttom-links__item">
            <a href="#" data-slide="2">Kuba Ausflüge</a>
            <ul class="hero__buttom-links__item__nav">
                <li>
                    <a href="#">Our Bucket List</a>
                </li>
                <li>
                    <a href="#">Excursion Havanna</a>
                </li>
                <li>
                    <a href="#">Random text</a>
                </li>
                <li>
                    <a href="#">Random text</a>
                </li>
            </ul>
        </div>
        <div class="hero__buttom-links__item">
        <a href="#" data-slide="3">Kuba bereisen</a>
        <ul class="hero__buttom-links__item__nav">

            <li><a href="{{ path('contact') }}">Individualreise</a></li>

            {% for filter in filterTags | slice(0, 3) %}
                <li>
                    <a href="{{ path('activitiesFilter', {'filters':filter.title }) }}#activities">
                        {{ filter.title }}
                    </a>
                </li>
            {% endfor %}

        </ul>
    </div>
    </div>
</section>
